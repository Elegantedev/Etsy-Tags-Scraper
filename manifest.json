{
  "manifest_version": 3,
  "name": "Etsy Tags Scraper",
  "version": "1.0",
  "description": "Scrape Etsy product listing tags.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.etsy.com/*"],
      "js": ["content.js"]
    }
  ]
}
